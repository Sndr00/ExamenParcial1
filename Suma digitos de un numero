//Suma los dígitos de un número entero positivo
#include <stdio.h>
#include <math.h>

int main (){

int opc, s=0;

printf("Suma digitos de un numero\n");
printf("\nIngrese un numero: ");
scanf("%d", &opc);

while (opc>0){
    s=s+opc%10;
    opc=opc/10;
}

printf("La suma de los digitos del numero es: %d", s+opc);

return 0;
}
