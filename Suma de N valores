//Pide la cantidad de números que va a sumar y después dichos números

#include <stdio.h>
#include <math.h>

int main (){

int a, opc, cero=0, s=0;


	printf("Ingrese la cantidad de numeros que desea sumar: ");
	scanf("%d",&a);

while (cero<a){
    printf("Ingresar un numero: ");
    scanf("%d",&opc);
    
  s=s+opc;
  cero=cero+1;
}

printf("El resultado es: %d", s);

	return 0;
}
